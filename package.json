{
  "name": "templates",
  "displayName": "Templates",
  "description": "Templates for VS Code",
  "version": "0.0.1",
  "publisher": "",
  "repository": "https://github.com/damolinx/vscode-templates",
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:templates.newItem",
    "onCommand:templates.registerCommand",
    "onCommand:templates.unregisterCommand"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "templates.newItem",
        "title": "New Item from Template â€¦",
        "category": "Templates"
      }
    ],
    "configuration": {
      "title": "Templates",
      "properties": {
        "templates.manifestPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to load manifests from. Defaults to `./.templates/templates.json` if empty."
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "templates.newItem",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "templates.newItem",
          "group": "navigation@10",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-uri": "^3.0.3"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^12.20.52",
    "@types/vscode": "^1.67.0",
    "@typescript-eslint/eslint-plugin": "^4.16.0",
    "@typescript-eslint/parser": "^4.16.0",
    "@vscode/test-electron": "^1.6.1",
    "eslint": "^7.21.0",
    "glob": "^7.1.4",
    "mocha": "^9.2.2",
    "source-map-support": "^0.5.12",
    "typescript": "^4.6.4"
  }
}
