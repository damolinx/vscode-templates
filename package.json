{
    "name": "templates",
    "displayName": "Templates",
    "description": "Templates for VS Code",
    "version": "0.0.1",
    "publisher": "Daniel Molina",
    "repository": "https://github.com/damolinx/vscode-templates",
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:templates.newItem",
        "onCommand:templates.registerCommand",
        "onCommand:templates.unregisterCommand"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "templates.newItem",
                "title": "New Item from template â€¦"
            }
        ],
        "configuration": {
            "title": "Templates",
            "properties": {
                "templates.manifestPath": {
                    "type": "string",
                    "markdownDescription": "Path to load manifests from. Defaults to `./.templates/templates.json`"
                }
            }
        },
        "menus": {
            "commandPalette": [
                {
                    "when": "false",
                    "command": "templates.newItem"
                }
            ],
            "explorer/context": [
                {
                    "when": "explorerResourceIsFolder",
                    "command": "templates.newItem",
                    "group": "navigation@10"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "vscode-uri": "^3.0.3"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.32.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "@vscode/test-electron": "^1.6.1",
        "eslint": "^7.21.0",
        "glob": "^7.1.4",
        "mocha": "^9.2.1",
        "source-map-support": "^0.5.12",
        "typescript": "^4.5.5"
    }
}